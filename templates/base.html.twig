<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Pizza{% endblock %}</title>
        {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('dist/css/bootstrap.min.css')}}" type="text/css" />
        <link rel="stylesheet" href="{{ asset('css/style.css') }}" type="text/css" />
        <link rel="shortcut icon" href="{{ asset('favicon.ico') }}" type="image/x-icon" />       
        {% endblock %}
    </head>
    <body>
        {% block body %}

            {% block header %}

                {% block h1 %} <h1>Pizza</h1> {% endblock %}

                {% block nav %}
                    <nav class="navbar navbar-default" role="navigation">
                        <div class="navbar-contents">
                            <ul class="nav navbar-nav">
                                <li><a href="{{ path('index') }}"><i class="glyphicon glyphicon-home"></i> Pr√©sentation</a></li>
                                <li><a href="{{ path('pizzas_list') }}"><i class="glyphicon glyphicon-list"></i> Les pizzas</a></li>
                                <li><a href="#"><i class="glyphicon glyphicon-usd"></i> Commander</a></li>
                            </ul>

                            <div class="navbar-login">
                                <form method="post">
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-user"></i></span>
                                        <input type="text" class="form-control" name="_username" />
                                    </div>
                                    <div class="input-group">
                                        <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
                                        <input type="password" class="form-control" name="_password" />
                                    </div>
                                    <input type="submit" class="hide" />
                                </form>
                            </div>
                        </div>
                    </nav>                
                {% endblock %}
            
            {% endblock %}

            {% block content %}{% endblock %}
        
        {% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
